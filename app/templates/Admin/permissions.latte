
{block content}
{snippet permissionsForm}
	{form permissionsForm, class => "ajax"}
		{control $form errors}
<table>
	<thead>
		<tr>
			<th>Username</th>
			{foreach $permissions as $perm}
			<th>{$perm}</th>
			{/foreach}
		</tr>
	</thead>
	<tbody>
		{foreach $form->getComponents() as $c}
		{if substr($c->name,0, 4) == "user"}
		<tr>
			<td>{$users[str_replace("user", "", $c->name)]["username"]}</td>
			{foreach $permissions as $name => $perm}
				<td>{$c[$name]->getControl() }</td>
			{/foreach}
		</tr>
		{/if}
		{/foreach}

		<tr><td n:attr="colspan => count($permissions) +1">{input set }</td></tr>
	</tbody>

</table>
	{/form}
{/snippet}
<p>{_ "Please note, that all permision changes will be used after next login of that user!"}</p>
{/block}