{*
 * @version    $Id: template.phtml 2 2009-07-13 20:58:52Z david@grudl.com $
 * @param Paginator $paginator
 * @param array     $steps
 *}
{snippet paginator}
{if $paginator->pageCount > 1}
<div class="paginator">
	{if $paginator->isFirst()}
	<span class="button disabled">« {_ "Previous"}</span>
	{else}
	<a href="{link this, 'page' => $paginator->page - 1}" class="ajax previous button">« {_ "Previous"}</a>
	{/if}

	{foreach $steps as $step}
	{if $step == $paginator->page}
		<span class="current button">{$step}</span>
	{else}
		<a href="{link this, 'page' => $step}" class="ajax page-link button">{$step}</a>
	{/if}
	{if $iterator->nextValue > $step + 1}<span>…</span>{/if}
	{/foreach}

	{if $paginator->isLast()}
	<span class="button disabled">{_ "Next"} »</span>
	{else}
	<a href="{link this , 'page' => $paginator->page + 1}" class="ajax button next">{_ "Next"} »</a>
	{/if}
</div>
{/if}
{/snippet}
